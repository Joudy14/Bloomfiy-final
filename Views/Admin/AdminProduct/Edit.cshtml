@model Bloomfiy.Models.Product
@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Edit Product: @Model.Name</h1>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>

@using (Html.BeginForm("Edit", "AdminProduct", FormMethod.Post, new { id = "editProductForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.CategoryId) <!-- ADD THIS LINE -->

<div class="admin-form-container">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <small class="form-text text-muted">
                Image folder: <code>/Images/products_img/@Model.ImageFolderName/</code>
            </small>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BasePrice)
            @Html.EditorFor(model => model.BasePrice, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "number",
                    step = "0.01"
                }
            })
            @Html.ValidationMessageFor(model => model.BasePrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(model => model.StockQuantity)
            @Html.EditorFor(model => model.StockQuantity, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    type = "number"
                }
            })
            @Html.ValidationMessageFor(model => model.StockQuantity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Category *</label>
            <select name="CategoryId" class="form-control" required>
                <option value="">-- Select Category --</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.CategoryId" @(Model.CategoryId == category.CategoryId ? "selected" : "")>
                        @category.CategoryName
                    </option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
    </div>

    <!-- Color Selection with Image Filenames (MATCHES CREATE FORMAT) -->
    <div class="form-group">
        <label>Available Colors & Image Filenames</label>
        <div class="color-inputs-container">
            @if (ViewBag.Colors != null)
            {
                // Get existing product colors as dictionary
                var existingColors = new Dictionary<int, string>();
                if (Model.ProductColors != null)
                {
                    foreach (var pc in Model.ProductColors)
                    {
                        if (pc != null && pc.Color != null)
                        {
                            existingColors[pc.ColorId] = pc.ImageFileName;
                        }
                    }
                }

                foreach (var color in ViewBag.Colors)
                {
                    bool isSelected = existingColors.ContainsKey(color.ColorId);
                    string currentImage = isSelected ? existingColors[color.ColorId] : "";

                    <div class="color-input-row @(isSelected ? "selected" : "")" id="color-row-@color.ColorId">
                        <div class="color-selection">
                            <label class="color-checkbox">
                                <input type="checkbox"
                                       name="selectedColors"
                                       value="@color.ColorId"
                                       @(isSelected ? "checked" : "")
                                       class="color-check"
                                       id="color-check-@color.ColorId" />
                                <span class="color-swatch" style="background-color: @(string.IsNullOrEmpty(color.ColorCode) ? "#ccc" : color.ColorCode)"></span>
                                <span class="color-name">@color.ColorName</span>
                                <span class="color-price-adjustment">+$@color.PriceAdjustment</span>
                            </label>
                        </div>

                        <div class="image-input" id="image-input-@color.ColorId" style="@(isSelected ? "" : "display: none;")">
                            <input type="text"
                                   name="colorImageNames[@color.ColorId]"
                                   value="@currentImage"
                                   placeholder="Image filename (e.g., rose_red.jpg)"
                                   class="form-control form-control-sm image-filename"
                                   id="image-filename-@color.ColorId"
                                   @(isSelected ? "" : "disabled") />
                            <small class="form-text text-muted">
                                File in: /Images/products_img/@Model.ImageFolderName/
                                <br />
                                <span class="text-info">Supported: .jpg, .jpeg, .png, .gif</span>
                                @if (!string.IsNullOrEmpty(currentImage))
                                {
                                    <br />
                                    <span class="text-success">Current: @currentImage</span>
                                    <br />
                                    <img src="/Images/products_img/@Model.ImageFolderName/@currentImage"
                                         onerror="this.style.display='none'"
                                         class="img-thumbnail mt-1"
                                         style="max-height: 60px;" />
                                }
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No colors available. Please add colors first.</p>
            }
        </div>
    </div>

    <!-- Product Info Image -->
    <div class="form-group">
        <label class="form-label">Product Info Image</label>
        <input type="text"
               name="productInfoImage"
               class="form-control"
               value="@Model.InfoImage"
               placeholder="tulip_info.jpg" />
    </div>

    <div class="form-group">
        <div class="checkbox">
            <label>
                @Html.EditorFor(model => model.IsAvailable)
                @Html.DisplayNameFor(model => model.IsAvailable)
            </label>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Update Product</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</div>
}

<script>
    // SIMPLE JAVASCRIPT FOR EDIT (SAME AS CREATE)
    document.addEventListener('DOMContentLoaded', function () {
        // Show/hide image inputs when checkbox clicked
        var colorCheckboxes = document.querySelectorAll('.color-check');
        colorCheckboxes.forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                var colorId = this.value;
                var imageInputDiv = document.getElementById('image-input-' + colorId);
                var filenameInput = document.getElementById('image-filename-' + colorId);
                var colorRow = document.getElementById('color-row-' + colorId);

                if (this.checked) {
                    imageInputDiv.style.display = 'block';
                    filenameInput.disabled = false;
                    colorRow.classList.add('selected');
                } else {
                    imageInputDiv.style.display = 'none';
                    filenameInput.disabled = true;
                    colorRow.classList.remove('selected');
                }
            });
        });

        // Initialize checkboxes on page load
        colorCheckboxes.forEach(function (checkbox) {
            if (checkbox.checked) {
                var colorId = checkbox.value;
                var imageInputDiv = document.getElementById('image-input-' + colorId);
                var filenameInput = document.getElementById('image-filename-' + colorId);
                var colorRow = document.getElementById('color-row-' + colorId);

                imageInputDiv.style.display = 'block';
                filenameInput.disabled = false;
                colorRow.classList.add('selected');
            }
        });
    });

    // Add image preview when filename changes
var filenameInputs = document.querySelectorAll('.image-filename');
filenameInputs.forEach(function(input) {
    input.addEventListener('blur', function() {
        var colorId = this.id.replace('image-filename-', '');
        var imageName = this.value;
        var imgPreview = document.getElementById('img-preview-' + colorId);

        if (imgPreview) {
            imgPreview.src = '/Images/products_img/@Model.ImageFolderName/' + imageName;
            imgPreview.style.display = 'block';
        }
    });
});
</script>

