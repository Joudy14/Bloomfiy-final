@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-header">
    <h1>Dashboard Overview</h1>
    <p>Welcome back, Admin 🌿</p>
</div>

<section class="admin-dashboard">

    <!-- ==== TOP STATS ==== -->
    <div class="admin-stats">
        <div class="stat-card">
            <h3>@ViewBag.TotalOrders</h3>
            <p>Total Orders</p>
        </div>

        <div class="stat-card">
            <h3>@ViewBag.PendingOrders</h3>
            <p>Pending</p>
        </div>

        <div class="stat-card">
            <h3>@ViewBag.DeliveredOrders</h3>
            <p>Delivered</p>
        </div>

        <div class="stat-card">
            <h3>@ViewBag.TotalProducts</h3>
            <p>Products</p>
        </div>

        <div class="stat-card">
            <h3>@ViewBag.TotalUsers</h3>
            <p>Users</p>
        </div>
    </div>


    <!-- ==== MAIN GRID ==== -->
    <div class="admin-grid">

        <a href="@Url.Action("Index", "AdminProduct")" class="admin-card">
            <h3>Products</h3>
            <p>Manage flower products</p>
        </a>

        <a href="@Url.Action("Index", "AdminOrder")" class="admin-card">
            <h3>Orders</h3>
            <p>View & update orders</p>
        </a>

        <a href="@Url.Action("Index", "AdminEvent")" class="admin-card">
            <h3>Events</h3>
            <p>Manage event bookings</p>
        </a>

        <a href="@Url.Action("Index", "AdminUser")" class="admin-card">
            <h3>Users</h3>
            <p>Registered customers</p>
        </a>

    </div>
</section>
