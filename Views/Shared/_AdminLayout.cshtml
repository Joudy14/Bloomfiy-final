<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bloomfiy Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Your custom CSS -->
    <!-- Add this in your _AdminLayout.cshtml <head> section -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/AdminStyle.css">
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <div class="admin-brand">
                <h2>Bloomfiy Admin</h2>
            </div>
            <ul class="admin-menu">
                <li><a href="@Url.Action("Index", "Admin")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "Admin" ? "active" : "")">Dashboard</a></li>
                <li><a href="@Url.Action("Index", "AdminProduct")" class="@(ViewContext.RouteData.Values["controller"].ToString() == "AdminProduct" ? "active" : "")">Products</a></li>
                <li><a href="@Url.Action("Index", "AdminCategory")">Categories</a></li>
                <li><a href="@Url.Action("Index", "AdminOrder")">Orders</a></li>
                <li><a href="@Url.Action("Index", "AdminUser")">Users</a></li>
                <li><a href="@Url.Action("Index", "AdminEvent")">Events</a></li>
                <li><a href="@Url.Action("Index", "Home")" target="_blank">View Site</a></li>
                <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="admin-main">
            <div class="admin-content">
                @RenderBody()
            </div>
        </main>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>