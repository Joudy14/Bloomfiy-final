﻿@model List<Bloomfiy_final.Models.WishlistItem>

@{
    ViewBag.Title = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.IncludeWishlistCss = true;
}

<section class="Wishlist-page container">
    <h2>Your Wishlist</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="Wishlist-empty">
            Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="Wishlist-grid">
            @foreach (var item in Model)
            {
                <div class="Wishlist-card">
                    <img src="@item.ImageUrl" class="Wishlist-image" />

                    <h3>@item.Name</h3>
                    <p class="Wishlist-price">$@item.Price</p>

                    @using (Html.BeginForm("Remove", "Wishlist", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.ProductId)
                        <button class="btn Wishlist-remove-btn">Remove</button>
                    }
                </div>
            }
        </div>
    }
</section>