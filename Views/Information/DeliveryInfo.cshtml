@{
    ViewBag.Title = "DeliveryInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<main class="delivery-page">
    <section class="page-hero">
        <div class="hero-content">
            <h1>Delivery Information</h1>
            <p>Everything you need to know about our delivery services</p>
        </div>
    </section>

    <section class="delivery-content">
        <div class="container">
            <div class="delivery-grid">
                <div class="delivery-card">
                    <div class="card-icon">üöö</div>
                    <h3>Delivery Areas</h3>
                    <p>We deliver within city limits and surrounding suburbs. Free delivery for orders over $75 within 10km radius.</p>
                    <ul>
                        <li>Downtown Area</li>
                        <li>North Suburbs</li>
                        <li>South Districts</li>
                        <li>East & West Regions</li>
                    </ul>
                </div>

                <div class="delivery-card">
                    <div class="card-icon">‚è∞</div>
                    <h3>Delivery Times</h3>
                    <p>We deliver Monday through Saturday during these hours:</p>
                    <ul>
                        <li><strong>Morning:</strong> 8:00 AM - 12:00 PM</li>
                        <li><strong>Afternoon:</strong> 1:00 PM - 6:00 PM</li>
                        <li><strong>Same-day:</strong> Orders before 2:00 PM</li>
                    </ul>
                </div>

                <div class="delivery-card">
                    <div class="card-icon">üí∞</div>
                    <h3>Delivery Fees</h3>
                    <p>Transparent pricing for all delivery services:</p>
                    <ul>
                        <li><strong>Standard:</strong> $12.99 (2-4 hours)</li>
                        <li><strong>Express:</strong> $19.99 (1-2 hours)</li>
                        <li><strong>Free:</strong> Orders over $75</li>
                    </ul>
                </div>
            </div>

            <div class="delivery-details">
                <h2>Important Delivery Notes</h2>
                <div class="details-grid">
                    <div class="detail-item">
                        <h4>Recipient Availability</h4>
                        <p>Please ensure someone is available to receive the delivery. If no one is home, we'll attempt to leave the arrangement in a safe, shaded location.</p>
                    </div>
                    <div class="detail-item">
                        <h4>Weather Conditions</h4>
                        <p>During extreme weather, delivery times may be adjusted to protect your flowers. We'll contact you if there are any delays.</p>
                    </div>
                    <div class="detail-item">
                        <h4>Hospital & Office Delivery</h4>
                        <p>We deliver to hospitals and offices during their visiting/business hours. Please provide specific department or floor information.</p>
                    </div>
                </div>
            </div>

            <div class="delivery-faq">
                <h2>Common Delivery Questions</h2>
                <div class="simple-faq">
                    <div class="faq-pair">
                        <h4>Can I track my delivery?</h4>
                        <p>Yes! You'll receive tracking updates via SMS and email once your order is out for delivery.</p>
                    </div>
                    <div class="faq-pair">
                        <h4>What if I need to change delivery address?</h4>
                        <p>Contact us immediately at +90 555 123 4567. Changes must be made at least 2 hours before scheduled delivery.</p>
                    </div>
                    <div class="faq-pair">
                        <h4>Do you deliver on Sundays?</h4>
                        <p>Sunday delivery is available for an additional $25 fee and must be scheduled in advance.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

